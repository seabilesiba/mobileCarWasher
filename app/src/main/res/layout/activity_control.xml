<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControlActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/my_light_primary"
        android:id="@+id/rl"
        >

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginVertical="20dp"
            android:layout_marginStart="10dp"
            android:paddingRight="20dp"
            android:src="@drawable/baseline_arrow_back_24"
            app:tint="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login as"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            />

    </RelativeLayout>
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_height="200dp"
        android:layout_below="@+id/rl"
        android:src="@drawable/wash_gif"
        android:id="@+id/imgLoginAs"

        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_height="wrap_content"
        android:text="Owner"
        android:textSize="14sp"
        android:layout_below="@id/imgLoginAs"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#51A8EF"
        android:layout_marginTop="50dp"
        app:cornerRadius="20dp"
        android:id="@+id/ownerBtn"


        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_below="@+id/ownerBtn"
        android:layout_centerHorizontal="true"
        android:text="Driver"
        android:textSize="14sp"
        app:backgroundTint="#51A8EF"
        app:cornerRadius="20dp"
        android:id="@+id/driverBtn"
        />



</RelativeLayout>