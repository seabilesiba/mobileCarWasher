<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/lnContainer3"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="Phone"
            android:layout_below="@id/imgProfile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="5dp"
            android:textSize="14dp"
            android:paddingLeft="20dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/profile_background"
            android:textColor="@color/my_dark_primary"
            android:textStyle="bold">


            <LinearLayout
                android:id="@+id/lnImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/carImage"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/car_image_bag"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/lnImage"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCarName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Names: Toyota land cruser v8"
                    android:layout_toRightOf="@id/imgDriverProfile"
                    android:layout_marginTop="1dp"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:textColor="@color/secondary_text"
                    android:paddingLeft="30dp"/>

                <TextView
                    android:id="@+id/txtNumPlate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:textColor="@color/secondary_text"
                    android:text="Number Plate: WER 234 L"
                    android:layout_below="@id/txtDriveName"
                    android:layout_toRightOf="@id/imgDriverProfile"
                    android:paddingLeft="30dp"/>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/my_light_primary"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/imgDriverProfile">

                    <TextView
                        android:id="@+id/txtDelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:layout_marginTop="1dp"
                        android:textStyle="bold"
                        android:textSize="8dp"
                        android:drawableLeft="@drawable/baseline_delete_forever_24"
                        android:textColor="@color/secondary_text"
                        android:layout_marginStart="30dp"/>

                    <TextView
                        android:id="@+id/txtUpdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update"
                        android:layout_marginTop="1dp"
                        android:layout_toRightOf="@id/txtDelete"
                        android:textSize="8dp"
                        android:textStyle="bold"

                        android:drawableLeft="@drawable/baseline_update_24"
                        android:textColor="@color/secondary_text"
                       />
                </RelativeLayout>



            </LinearLayout>
        </RelativeLayout>




    </LinearLayout>



</RelativeLayout>